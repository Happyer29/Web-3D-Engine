{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "rootDir": "./src/scripts",
    "build": false,
    "composite": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es6", "es2015.promise", "es2016.array.include", "DOM"],
    "alwaysStrict": true,
    "noEmitOnError": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "pretty": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "watch": true,
    "allowSyntheticDefaultImports" : true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "declaration": true,
    "typeRoots": [
    ],
    "types": ["mocha", "webpack-env"]
  },
  "include": ["./src/scripts/**/**/*", "./node_modules"],
  "exclude": [
    "./src/scripts/**/*.spec.ts",
    "./dist",
    "./node_modules"
  ]
}